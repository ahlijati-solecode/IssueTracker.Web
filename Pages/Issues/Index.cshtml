@page
@model IssueTracker.Web.Pages.Issues.IndexModel
@{
}

<h2>Issues</h2>
<p><a asp-page="Create" class="btn btn-primary">+ New Issue</a></p>
<table class="table table-bordered" id="issuesTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Priority</th>
            <th>Project ID</th>
            <th>Assigned To User ID</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
         @foreach(var c in Model.Issues)
        {
            <tr id="row-@c.id">
                <td>@c.id</td>
                <td>@c.Title</td>
                <td>@c.Description</td>
                <td>@c.Status</td>
                <td>@c.Priority</td>
                <td>@c.Project.Name</td>
                <td>@c.AssignedToUserId</td>
                <td>@c.CreatedDate</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@c.id" class="btn btn-sm btn-warning">Edit</a>
                    <a onclick="deleteIssue(@c.id)" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        } 
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function() {
            loadIssues(); // initial table load
        });
    </script>

    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                showSuccessToast("@TempData["SuccessMessage"]");
                loadIssues(); // refresh table after toast
            });
        </script>
    }
}