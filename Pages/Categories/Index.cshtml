@page
@model IssueTracker.Web.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>
<p><a asp-page="Create" class="btn btn-primary">+ New Category</a></p>

<table class="table table-bordered" id="categoriesTable">
    <thead>
        <tr><th>ID</th><th>Name</th><th>Actions</th></tr>
    </thead>
    <tbody>
        
        @foreach (var c in Model.Categories)
        {
            <tr id="row-@c.Id">
                <td>@c.Id</td>
                <td>@c.CategoryName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@c.Id" class="btn btn-sm btn-danger">Delete</a>
                    <button class="btn btn-sm btn-outline-danger" onclick="deleteCategory(@c.Id)">Delete (AJAX)</button>

                </td>
            </tr>
        }
        
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Always load categories
           // loadCategories();

            // Show toast if success message exists
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                    showSuccessToast("@TempData["SuccessMessage"]");
            </text>
        }

        @{
            // clear TempData setelah dipakai
            TempData.Remove("SuccessMessage");
        }
       });
    </script>
}


