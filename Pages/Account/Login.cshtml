@page
@model IssueTracker.Web.Pages.Account.LoginModel
@{
    Layout = "_LoginLayout"; // layout khusus login
}

<div class="login-box">
    <div class="login-logo">
        <b>Issue </b> Tracker
    </div>
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>

            <form method="post">
                <div class="input-group mb-3">
                    <input asp-for="Input.UserName" class="form-control" placeholder="Username" />
                    <div class="input-group-append">
                        <div class="input-group-text"><span class="fas fa-user"></span></div>
                    </div>
                </div>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>

                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password" />
                    <div class="input-group-append">
                        <div class="input-group-text"><span class="fas fa-lock"></span></div>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="row">
                    <div class="col-8"></div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                </div>
            </form>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
            }
        </div>
    </div>
</div>

