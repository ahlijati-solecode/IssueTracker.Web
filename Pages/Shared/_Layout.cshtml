<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IssueTrackerWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IssueTrackerWeb.styles.css" asp-append-version="true" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- AdminLTE v3 (CSS) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/css/adminlte.min.css">


</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Dashboard/Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="nav-link">
                            Welcome, @User.Identity.Name as <b>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value </b>
                        </span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Account/Login">Login</a>
                    </li>
                }

            </ul>           
        </nav>

        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="https://adminlte.io/themes/v3/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">AdminLTE 3</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://adminlte.io/themes/v3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Alexander Pierce</a>
                    </div>
                </div>
                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>


                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu">
                        <li class="nav-item">
                            <a href="/Dashboard/Index" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>Dashboard</p>
                            </a>
                        </li>
                       
                        
                         @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
                        <li class="nav-item">
                            <a href="/Categories" class="nav-link">
                                <i class="nav-icon fas fa-list"></i>
                                <p>Categories</p>
                            </a>
                        </li>
                            <li class="nav-item">
                                <a href="/Comments" class="nav-link">
                                    <i class="nav-icon fas fa-list"></i>
                                    <p>Comments</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Projects" class="nav-link active">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Project</p>
                                </a>
                            </li>
        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a href="/Categories" class="nav-link">
                                    <i class="nav-icon fas fa-list"></i>
                                    <p>Categories</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Comments" class="nav-link">
                                    <i class="nav-icon fas fa-list"></i>
                                    <p>Comments</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Projects" class="nav-link active">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Project</p>
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Developer"))
                        {
                            <li class="nav-item">
                                <a href="/Categories" class="nav-link">
                                    <i class="nav-icon fas fa-list"></i>
                                    <p>Categories</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/Comments" class="nav-link">
                                    <i class="nav-icon fas fa-list"></i>
                                    <p>Comments</p>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content p-3">
                @RenderBody()
            </section>
       </div>
        <!-- /.content-wrapper -->
        <!-- Footer -->
        <footer class="main-footer text-center">
            <strong>&copy; 2025 Issue Tracker App</strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE v3 (JS) -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.1/dist/js/adminlte.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @inject IConfiguration Configuration

    <script>
        const API_BASE_URL = "@Configuration["ApiBaseUrl"]";
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>